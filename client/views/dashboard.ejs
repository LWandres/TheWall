</div><!--intentional div for formatting -->

<div id="dashboard" ng-controller="dashboardController">
	<div id="header" ng-controller="userController">
		<h2>Welcome <span class="blue" ng-bind="user.name"></span></h2>
		<h4>DASHBOARD  <a class="blue" href="#/">|  LOGOUT</a></h4>
	</div>

	<div class="row main">
		<h3>THE<span class="inverselogo">WALL</span> DISCUSSIONS</h3>

		<div class="text-right">
			<input type="text" ng-model="query" placeholder="Search...">
		</div>

		<div class="col-xl-12">
			<table class="table table-striped table-hover" topics>
				<thead>
					<tr>
						<th>Category</th>
						<th>Topic</th>
						<th>User Name</th>
						<th>Replies</th>
					</tr>
				</thead>
				<tbody>
					<tr ng-repeat="topic in topics | filter: query">
						<td ng-bind="topic.category"></td>
						<td><a ng-bind="topic.title" href="#/topic/{{topic._id}}"></a></td>
						<td><a ng-bind="topic.name" ng-href="#/user/{{topic.user_id}}"></a></td>
						<td ng-bind="topic.posts"></td>
					</tr>
				</tbody>
			</table>
		</div> <!--End Topic Table -->

		<div id="addnew" class="split">
			<form class="form-horizontal" role="form">
				<h3>ADD A NEW TOPIC</h3>
				<div class="form-group">
					<label class="col-sm-2 control-label">Topic:</label>
					<input type="text" class="col-sm-4 new" ng-model="newTopic.title">
				</div>

				<div class="form-group">
					<label class="col-sm-2 control-label">Description:</label>
					<textarea class="col-sm-4 new" rows="4" ng-model="newTopic.description"></textarea>
				</div>

				<div class="form-group">
					<label class="col-sm-2 control-label">Category:</label>
					<!-- Could refactor this later into an array of topics with ng-options for easier management of topic expansion/updates-->
					<select class="col-sm-4" ng-model="newTopic.category">
						<option value="Arts and Culture">Arts and Culture</option>
						<option value="Auto">Auto</option>
						<option value="Books">Books</option>
						<option value="Business">Business</option>
						<option value="Computers">Computers</option>
						<option value="DIY">DIY</option>
						<option value="Education">Education</option>
						<option value="Entertainment">Entertainment</option>
						<option value="Environment">Environment</option>
						<option value="Fashion">Fashion</option>
						<option value="Food">Food</option>
						<option value="Financial">Financial</option>
						<option value="Gaming">Gaming</option>
						<option value="Healthcare">Healthcare</option>
						<option value="History">History</option>
						<option value="Home and Garden">Home and Garden</option>
						<option value="Housing">Housing</option>
						<option value="Humor">Humor</option>
						<option value="Jobs">Jobs</option>
						<option value="Music">Music</option>
						<option value="Outdoor Recreation">Outdoor Recreation</option>
						<option value="Politics">Politics</option>
						<option value="Sports">Sports</option>
						<option value="Techology">Techology</option>
						<option value="Travel">Travel</option>
					</select>
				</div>

				<div class="form-group">
					<button class="btn btn-success col-md-1 col-md-offset-5" ng-click="createTopic(newTopic, user)">POST TOPIC</button>
				</div>
			</form>
		</div> <!--end of add new topic div -->
	</div>
</div>
