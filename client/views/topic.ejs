<div id="header">
	<h2>The<span class="blue">WALL</span></h2>
	<h4><a class="blue" href="#/dashboard">DASHBOARD</a><a class="navigation" href="#/">|  LOGOUT</a></h4>
</div>

<div id="topicdetail">

	<div class="original">
		<h1><span class="logo"><a href="#/user/{{topic.user_id}}" ng-bind="topic.name"></span></a> posted a topic:</h1>
		<hr id="posts">
		<div class="topic">
			<h3><span ng-bind="topic.title"></span></h3>
			<h5><span ng-bind="topic.description"></span></h5>
		</div>
	</div>

	<div class="row form-group">
		<label class="col-md-2 control-label">Post your answer here:</label>
		<br>
		<br>
		<textarea class="col-md-3" rows="6" ng-model="newPost.post"></textarea>
		<button class="btn btn-success col-md-1 col-md-offset-4" ng-click="createPost(newPost, name)">POST</button>
	</div>
	<hr>
	<div id="comments">
		<h3>Answers:</h3>
		<div class="row form-group">
			<div id="commentpost" ng-repeat="post in posts | orderBy: created_at: reverse">
				<div class="userpost">
					<a href="#/user/{{post.user_id}}" ng-bind="post.name"></a> -
					<p id="date" ng-bind="post.created_at | date: 'MMMM, dd, yyyy - h:mm a'"></p>
					<hr id="posts">
					<p ng-bind="post.post"></p>
					<a id="commentlink" href="" ng-click="showcomments(post._id)">Add a Comment</a>
				</div><br>

				<div class="comments" ng-if="post.comments.length > 0">
					<h4>Comments:</h4>
					<div ng-repeat="comment in post.comments">
						<hr id="posts">
						<a href="#/user/{{comment.user_id}}" style="margin-left: 40px" ng-bind="comment.name"></a> -
						<p id="date" ng-bind="comment.created_at | date: 'MMMM, dd, yyyy - h:mm a'"></p>
						<p style="margin-left: 40px" ng-bind="comment.comment"></p><br>
					</div>
				</div>

				<!-- toggles in an out with the "Add a Comment" link -->
				<div id="commentbox_{{post._id}}" class="hide" ng-if="post">
					<div class="row form-group">
						<label style="margin-left: 40px" class="col-md-2 control-label">Post a comment:</label>
						<textarea style="margin-left: 40px" class="col-md-2" rows="6" ng-model="newComment.comment"></textarea><br>
						<button class="btn btn-success col-md-1 col-md-offset-3" ng-click="createComment(newComment, post, name)">COMMENT</button>
					</div>
				</div>

			</div><!--end commentpost div-->
		</div><!--end row-form-group div-->
	</div><!--end comments div-->
</div><!--end topicdetail div-->
